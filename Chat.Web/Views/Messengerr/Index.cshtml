    <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10">
        <div class="">
            <div class="row" style="justify-content: end; display:flex;">
                <a href="/" style=" margin-right:auto !important; background: none; color: black !important; "> <i class="fa fa-arrow-left"></i></a>
                <i style="margin-top:20px !important; margin-right:30px">@User.Identity.Name <i class="far fa-User"></i></i>
                <a class="btn btn-primary align-content-end button_X" href="/Messengerr/AllUsers">Add Friends <i class="fa fa-Users"></i></a>
                <a class="btn btn-primary align-content-end button_X" href="/Messengerr/FriendRequests">Friends Requests <i class="far fa-envelope"></i></a>

            </div>
            <h2 style="margin-left:20px; font-family:cursive">Friends</h2>
            <div style="overflow-y: scroll; height: 530px; ">
                <table class="table" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                Avatar
                            </th>
                            <th>
                                Name
                            </th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @{
                                    if (item.Avatar == "avatar1.png")
                                    {
                                        <td>
                                            <div>
                                                <img src="/images/icons/avatar1.png" class="user-avatar" data-bind="attr: { src: '/images/icons/' + myAvatar() }" />
                                            </div>
                                        </td>
                                    }
                                    else if (item.Avatar == "avatar2.png")
                                    {
                                        <td>
