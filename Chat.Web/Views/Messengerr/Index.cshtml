                                                <img src="/images/icons/avatar3.png" class="user-avatar" data-bind="attr: { src: '/images/icons/' + myAvatar() }" />
                                            </div>
                                        </td>
                                    }
                                    else if (item.Avatar == "avatar4.png")
                                    {
                                        <td>
                                            <div>
                                                <img src="/images/icons/avatar4.png" class="user-avatar" data-bind="attr: { src: '/images/icons/' + myAvatar() }" />
                                            </div>
                                        </td>
                                    }
                                }
                                <td style="font-size:22px">
                                    <a style="border-radius:10px; text-decoration:none" href="/Messengerr/Chat?receiverId=@item.Id">@item.FullName</a>
                                </td>
                                <td style="width:150px !important;">
                                   

                                        @Html.ActionLink("",
                        "Delete", "Messengerr", new { Id = item.Id },
                        new { @style = "color:orangered !important; background-color:transparent !important; ", @class = "fa fa-trash", onclick = "return confirm('Do you really want to Delete " + item.FullName + "?')" })

                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
